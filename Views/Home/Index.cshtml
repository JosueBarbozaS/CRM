<!-- Featured Categories -->
@if (ViewBag.CategoriasDestacadas != null && ViewBag.CategoriasDestacadas.Count > 0)
{
    <div class="py-20 bg-gradient-to-br from-gray-50 to-blue-50">
        <div class="container mx-auto px-4">
            <div class="text-center mb-16">
                <h2 class="text-4xl font-bold text-gray-900 mb-4 lg:text-5xl">Categorías destacadas</h2>
                <p class="max-w-2xl mx-auto text-xl text-gray-600">
                    Descubre nuestra amplia gama de productos organizados para facilitar tu búsqueda.
                </p>
            </div>

            <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
                @foreach (var categoria in ViewBag.CategoriasDestacadas)
                {
                    <div class="group relative overflow-hidden bg-white rounded-3xl shadow-lg hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2">
                        <div class="absolute inset-0 bg-gradient-to-br from-brand-blue to-blue-600 opacity-0 group-hover:opacity-5 transition-opacity duration-500"></div>
                        <div class="p-8">
                            <div class="inline-flex items-center justify-center w-16 h-16 mb-6 bg-gradient-to-br from-brand-blue to-blue-600 rounded-2xl text-white">
                                <i class="fas fa-laptop text-2xl"></i>
                            </div>
                            <h3 class="text-2xl font-bold text-gray-900 mb-4">@categoria.NOMBRE</h3>
                            <p class="text-gray-700 leading-relaxed mb-6">
                                @(string.IsNullOrEmpty(categoria.DESCRIPCION) ? "Descubre nuestros productos de esta categoría" : categoria.DESCRIPCION)
                            </p>
                            <a href="@Url.Action("Catalogo", new { categoriaId = categoria.ID_CATEGORIA })"
                               class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-brand-blue to-blue-600 text-white rounded-xl font-semibold hover:from-brand-blue hover:to-blue-700 transition-all duration-300 transform hover:scale-105">
                                Ver productos
                                <i class="fas fa-arrow-right ml-2"></i>
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}

<!-- Featured Products -->
@if (ViewBag.ProductosDestacados != null && ViewBag.ProductosDestacados.Count > 0)
{
    <div class="py-20 bg-white">
        <div class="container mx-auto px-4">
            <div class="text-center mb-16">
                <h2 class="text-4xl font-bold text-gray-900 mb-4 lg:text-5xl">Productos destacados</h2>
                <p class="max-w-2xl mx-auto text-xl text-gray-600">
                    Una selección de nuestros mejores productos con la mejor calidad y precio del mercado.
                </p>
            </div>

            <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-4">
                @foreach (var producto in ViewBag.ProductosDestacados)
                {
                    <div class="group relative overflow-hidden bg-white rounded-3xl shadow-lg hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2">
                        @{
                            var imagenProducto = producto.Imagenes != null && ((IEnumerable<dynamic>)producto.Imagenes).Any()
                            ? ((IEnumerable<dynamic>)producto.Imagenes).FirstOrDefault()?.RUTA_IMAGEN
                            : "/images/productos/default.png";
                        }

                        <div class="relative h-64 overflow-hidden bg-gradient-to-br from-gray-50 to-blue-50 p-4">
                            <img src="@imagenProducto"
                                 class="h-full w-full object-contain transition-transform duration-300 group-hover:scale-110"
                                 alt="@producto.NOMBRE">

                            <!-- Overlay with category and brand -->
                            <div class="absolute top-4 left-4 right-4 flex justify-between">
                                <span class="inline-block rounded-full bg-white/90 backdrop-blur-sm px-3 py-1 text-xs font-semibold text-blue-600">
                                    @producto.Categoria.NOMBRE
                                </span>
                                <span class="inline-block rounded-full bg-white/90 backdrop-blur-sm px-3 py-1 text-xs font-semibold text-purple-600">
                                    @producto.Marca.NOMBRE
                                </span>
                            </div>
                        </div>

                        <div class="p-6">
                            <h3 class="text-xl font-bold text-gray-900 mb-3 line-clamp-2">@producto.NOMBRE</h3>
                            <p class="text-gray-600 text-sm mb-4 line-clamp-2">
                                @(producto.DESCRIPCION?.Length > 80 ? producto.DESCRIPCION.Substring(0, 80) + "..." : producto.DESCRIPCION)
                            </p>

                            <div class="flex items-center justify-between">
                                <span class="text-2xl font-bold bg-gradient-to-r from-brand-blue to-blue-600 bg-clip-text text-transparent">
                                    @producto.PRECIO.ToString("C2")
                                </span>
                                <div class="flex space-x-2">
                                    <a href="@Url.Action("DetalleProducto", new { id = producto.ID_PRODUCTO })"
                                       class="inline-flex items-center justify-center w-10 h-10 bg-gray-100 hover:bg-gray-200 rounded-full text-gray-600 transition-colors duration-300"
                                       title="Ver detalles">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="@Url.Action("AgregarAlCarrito", new { idProducto = producto.ID_PRODUCTO })"
                                       class="inline-flex items-center justify-center w-10 h-10 bg-gradient-to-r from-brand-blue to-blue-600 hover:from-blue-600 hover:to-purple-700 rounded-full text-white transition-all duration-300 transform hover:scale-110"
                                       title="Agregar al carrito">
                                        <i class="fas fa-shopping-cart"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="text-center mt-12">
                <a href="@Url.Action("Catalogo")"
                   class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-brand-blue to-blue-600 text-white rounded-xl font-semibold hover:from-blue-600 hover:to-purple-700 transition-all duration-300 transform hover:scale-105 shadow-lg">
                    Ver todos los productos
                    <i class="fas fa-arrow-right ml-2"></i>
                </a>
            </div>
        </div>
    </div>
}

