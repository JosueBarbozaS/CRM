@model IngeTechCRM.Models.LoginViewModel
@{
    ViewData["Title"] = "Iniciar Sesión - IngeTech";
}

<div class="flex min-h-screen items-start justify-center bg-white px-4 pt-8 pb-8 sm:px-6 lg:px-8">
    <div class="w-full max-w-md space-y-4">
        <!-- Logo y encabezado -->
        <div class="text-center">
            <div class="flex justify-center items-center">
                <img src="~/images/productos/Logo SF.png" alt="IngeTech Logo" class="h-48" />
            </div>
            <h1 class="text-[24px] font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-brand-blue to-blue-500 -mt-16">IngeTech</h1>
            <h2 class="mt-2 text-[35px] font-extrabold text-gray-dark">Bienvenido</h2>
            <p class="mt-1 text-sm text-gray-light">
                Ingresa tus credenciales para acceder a tu cuenta
            </p>
        </div>

        <!-- Formulario con efecto de tarjeta flotante -->
        <div class="rounded-xl bg-white p-6 shadow-xl ring-1 ring-gray-200">
            @if (ViewBag.Error != null)
            {
                <div class="mb-6 rounded-lg bg-red-50 p-4 text-sm text-red-600">
                    <div class="flex items-center">
                        <i class="fas fa-exclamation-circle mr-2 text-lg text-red-500"></i>
                        <span>@ViewBag.Error</span>
                    </div>
                </div>
            }

            <form method="post" action="@Url.Action("Login", "Account")" class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-dark" for="correo">
                        Correo electrónico
                    </label>
                    <div class="relative mt-1 rounded-md shadow-sm">
                        <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
                            <i class="fas fa-envelope text-gray-light"></i>
                        </div>
                        <input id="correo"
                               name="correo"
                               type="email"
                               required
                               autocomplete="email"
                               placeholder="Ingrese su correo electrónico"
                               value="@ViewBag.RememberedEmail"
                               class="block w-full rounded-lg border border-gray-300 py-3 pl-10 pr-3 text-gray-dark placeholder-gray-light focus:border-brand-blue focus:outline-none focus:ring-2 focus:ring-brand-blue/30 focus:ring-opacity-50" />
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-dark" for="contrasena">
                        Contraseña
                    </label>
                    <div class="relative mt-1 rounded-md shadow-sm">
                        <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
                            <i class="fas fa-lock text-gray-light"></i>
                        </div>
                        <input id="contrasena"
                               name="contrasena"
                               type="password"
                               required
                               autocomplete="current-password"
                               placeholder="Ingrese su contraseña"
                               class="block w-full rounded-lg border border-gray-300 py-3 pl-10 pr-3 text-gray-dark placeholder-gray-light focus:border-brand-blue focus:outline-none focus:ring-2 focus:ring-brand-blue/30 focus:ring-opacity-50" />
                    </div>
                </div>

                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <input id="recordarme"
                               name="recordarme"
                               type="checkbox"
                               value="true"
                        @(ViewBag.RememberedEmail != null ? "checked" : "")
                               class="h-4 w-4 rounded border-gray-300 text-brand-blue focus:ring-brand-blue/30" />
                        <input name="recordarme" type="hidden" value="false" />
                        <label for="recordarme" class="ml-2 block text-sm text-gray-dark">
                            Recordarme
                        </label>
                    </div>

                    <div class="text-sm">
                        <a href="@Url.Action("OlvidarContrasena", "Account")" class="font-medium text-brand-blue hover:text-brand-blue/80">
                            ¿Olvidó su contraseña?
                        </a>
                    </div>
                </div>

                <div>
                    <button type="submit"
                            class="group relative flex w-full justify-center rounded-lg bg-gradient-to-r from-brand-blue to-blue-500 py-3 px-4 text-sm font-medium text-white shadow-lg transition duration-300 hover:from-brand-blue/90 hover:to-blue-400 focus:outline-none focus:ring-2 focus:ring-brand-blue/30 focus:ring-offset-2">
                        <span class="absolute inset-y-0 left-0 flex items-center pl-3">
                            <i class="fas fa-sign-in-alt"></i>
                        </span>
                        Iniciar Sesión
                    </button>
                </div>
            </form>

            <!-- Separador -->
            <div class="relative mt-8">
                <div class="absolute inset-0 flex items-center">
                    <div class="w-full border-t border-gray-light/50"></div>
                </div>
                <div class="relative flex justify-center text-sm">
                    <span class="bg-white px-4 text-gray-light">O continúe con</span>
                </div>
            </div>

            <!-- Botones de redes sociales -->
            <div class="mt-6 grid grid-cols-2 gap-3">
                <a href="@Url.Action("LoginGoogle", "Account")" class="inline-flex items-center justify-center rounded-lg border border-gray-light/50 bg-white py-2 px-4 text-sm font-medium text-gray-dark shadow-sm transition hover:bg-gray-light/10">
                    <i class="fab fa-google text-red-500 mr-2"></i>
                    Google
                </a>
                <a href="@Url.Action("LoginFacebook", "Account")" class="inline-flex items-center justify-center rounded-lg border border-gray-light/50 bg-white py-2 px-4 text-sm font-medium text-gray-dark shadow-sm transition hover:bg-gray-light/10">
                    <i class="fab fa-facebook text-blue-600 mr-2"></i>
                    Facebook
                </a>
            </div>
        </div>

        <!-- Enlace de registro -->
        <div class="text-center">
            <div class="my-4 flex items-center justify-center">
                <span class="text-sm text-gray-light">¿No tiene una cuenta en IngeTech?</span>
                <a href="@Url.Action("Register", "Account")" class="ml-2 rounded-md bg-brand-blue/10 px-3 py-1 text-sm font-medium text-brand-blue hover:bg-brand-blue/20">
                    ¡Regístrese ahora!
                </a>
            </div>
            <p class="mt-2 text-xs text-gray-light">
                Al iniciar sesión, acepta nuestros <a href="#" class="text-brand-blue hover:text-brand-blue/80">Términos de Servicio</a> y
                <a href="#" class="text-brand-blue hover:text-brand-blue/80">Política de Privacidad</a>
            </p>
        </div>
    </div>
</div>

<!-- Opcional: Decoraciones visuales para el fondo -->
<div class="absolute top-0 right-0 hidden h-64 w-64 transform translate-x-1/4 -translate-y-1/4 rounded-full bg-brand-blue opacity-10 blur-3xl lg:block"></div>
<div class="absolute bottom-0 left-0 hidden h-64 w-64 transform -translate-x-1/4 translate-y-1/4 rounded-full bg-blue-500 opacity-10 blur-3xl lg:block"></div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script src="~/js/Usuario.js"></script>
    }
}