@{
    ViewData["Title"] = "Enviar Correo";
    var usuario = ViewBag.Usuario;
}

<div class="container mx-auto px-4 py-8">
    <!-- Breadcrumbs -->
    <nav class="mb-6 flex flex-wrap text-sm">
        <a href="@Url.Action("Index", "Home")" class="text-gray-600 hover:text-indigo-600">Inicio</a>
        <span class="mx-2 text-gray-500">/</span>
        <a href="@Url.Action("Index", "Usuario")" class="text-gray-600 hover:text-indigo-600">Gestión de Usuarios</a>
        <span class="mx-2 text-gray-500">/</span>
        <a href="@Url.Action("Detalles", new { id = usuario.IDENTIFICACION })" class="text-gray-600 hover:text-indigo-600">Detalles del Usuario</a>
        <span class="mx-2 text-gray-500">/</span>
        <span class="font-medium text-gray-800">Enviar Correo</span>
    </nav>

    <!-- Encabezado -->
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-800">Enviar Correo Electrónico</h1>
        <p class="mt-2 text-gray-600">Enviar correo a: <strong>@usuario.NOMBRE_COMPLETO</strong></p>
    </div>

    <div class="grid grid-cols-1 gap-8 lg:grid-cols-3">
        <!-- Formulario principal -->
        <div class="lg:col-span-2">
            <div class="overflow-hidden rounded-xl bg-white shadow-lg">
                <div class="border-b border-gray-200 bg-blue-600 p-6 text-white">
                    <div class="flex items-center">
                        <div class="mr-4 flex h-12 w-12 items-center justify-center rounded-full bg-white bg-opacity-20 text-xl">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <h2 class="text-xl font-bold">Nuevo Mensaje</h2>
                    </div>
                </div>

                <div class="p-6">
                    <!-- Mostrar errores de validación -->
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="mb-6 rounded-lg bg-red-50 p-4 text-red-700">
                            <div class="flex">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-exclamation-circle"></i>
                                </div>
                                <div class="ml-3">
                                    <h3 class="text-sm font-medium text-red-800">Hay errores en el formulario</h3>
                                    <div class="mt-2 text-sm text-red-700">
                                        <ul class="list-disc space-y-1 pl-5">
                                            @foreach (var modelState in ViewData.ModelState.Values)
                                            {
                                                foreach (var error in modelState.Errors)
                                                {
                                                    <li>@error.ErrorMessage</li>
                                                }
                                            }
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Información del destinatario -->
                    <div class="mb-6 rounded-lg bg-gray-50 p-4">
                        <div class="flex items-center">
                            <div class="mr-4 flex h-12 w-12 items-center justify-center rounded-full bg-blue-100 text-blue-600">
                                <i class="fas fa-user"></i>
                            </div>
                            <div>
                                <h3 class="font-semibold text-gray-800">Destinatario</h3>
                                <p class="text-sm text-gray-600">@usuario.NOMBRE_COMPLETO</p>
                                <p class="text-sm text-gray-600">@usuario.CORREO_ELECTRONICO</p>
                            </div>
                        </div>
                    </div>

                    <!-- Formulario de envío -->
                    <form method="post" asp-action="EnviarCorreo" asp-route-id="@usuario.IDENTIFICACION">
                        <div class="space-y-6">
                            <!-- Asunto -->
                            <div>
                                <label for="asunto" class="mb-2 block text-sm font-medium text-gray-700">Asunto</label>
                                <input type="text"
                                       id="asunto"
                                       name="asunto"
                                       class="w-full rounded-lg border border-gray-300 px-4 py-2 focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500"
                                       placeholder="Ingrese el asunto del correo"
                                       required>
                            </div>

                            <!-- Mensaje -->
                            <div>
                                <label for="mensaje" class="mb-2 block text-sm font-medium text-gray-700">Mensaje</label>
                                <textarea id="mensaje"
                                          name="mensaje"
                                          rows="8"
                                          class="w-full rounded-lg border border-gray-300 px-4 py-2 focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500"
                                          placeholder="Escriba su mensaje aquí..."
                                          required></textarea>
                                <p class="mt-1 text-xs text-gray-500">El mensaje se enviará tal como lo escriba aquí.</p>
                            </div>
                        </div>

                        <div class="mt-8 flex justify-end space-x-3">
                            <a href="@Url.Action("Detalles", new { id = usuario.IDENTIFICACION })" class="rounded-lg border border-gray-300 px-5 py-2 font-medium text-gray-700 shadow-sm transition hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-gray-300 focus:ring-offset-2">
                                Cancelar
                            </a>
                            <button type="submit" class="rounded-lg bg-blue-600 px-5 py-2 font-medium text-white shadow-sm transition hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                                <i class="fas fa-paper-plane mr-2"></i>Enviar Correo
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Panel lateral -->
        <div class="space-y-6">
            <!-- Plantillas de mensajes -->
            <div class="rounded-xl bg-white p-6 shadow-lg">
                <h3 class="mb-4 text-lg font-semibold text-gray-800">Plantillas Rápidas</h3>
                <div class="space-y-3">
                    <button type="button"
                            onclick="aplicarPlantilla('Bienvenida', 'Estimado/a @usuario.NOMBRE_COMPLETO,\n\n¡Bienvenido/a a nuestro sistema! Su cuenta ha sido creada exitosamente.\n\nSi tiene alguna pregunta, no dude en contactarnos.\n\nSaludos cordiales,\nEquipo IngeTech')"
                            class="w-full rounded-lg bg-gray-100 px-3 py-2 text-left text-sm font-medium text-gray-700 hover:bg-gray-200">
                        <i class="fas fa-hand-wave mr-2 text-green-600"></i>Bienvenida
                    </button>

                    <button type="button"
                            onclick="aplicarPlantilla('Contraseña Restablecida', 'Estimado/a @usuario.NOMBRE_COMPLETO,\n\nSu contraseña ha sido restablecida por un administrador del sistema.\n\nPor favor, cambie su contraseña tan pronto como inicie sesión.\n\nSaludos cordiales,\nEquipo IngeTech')"
                            class="w-full rounded-lg bg-gray-100 px-3 py-2 text-left text-sm font-medium text-gray-700 hover:bg-gray-200">
                        <i class="fas fa-key mr-2 text-blue-600"></i>Contraseña Restablecida
                    </button>

                    <button type="button"
                            onclick="aplicarPlantilla('Información Importante', 'Estimado/a @usuario.NOMBRE_COMPLETO,\n\nLe escribimos para informarle sobre:\n\n[Escriba aquí la información importante]\n\nGracias por su atención.\n\nSaludos cordiales,\nEquipo IngeTech')"
                            class="w-full rounded-lg bg-gray-100 px-3 py-2 text-left text-sm font-medium text-gray-700 hover:bg-gray-200">
                        <i class="fas fa-info-circle mr-2 text-yellow-600"></i>Información Importante
                    </button>
                </div>
            </div>

            <!-- Consejos -->
            <div class="rounded-xl bg-blue-50 p-6 shadow-lg">
                <div class="flex items-center">
                    <div class="mr-3 flex h-10 w-10 flex-shrink-0 items-center justify-center rounded-full bg-blue-100 text-blue-600">
                        <i class="fas fa-lightbulb"></i>
                    </div>
                    <h3 class="text-lg font-semibold text-blue-800">Consejos</h3>
                </div>
                <ul class="mt-4 space-y-2 pl-12 text-sm text-blue-700">
                    <li class="list-disc">Use un asunto claro y descriptivo.</li>
                    <li class="list-disc">Sea cortés y profesional en el mensaje.</li>
                    <li class="list-disc">Incluya toda la información necesaria.</li>
                    <li class="list-disc">Revise el mensaje antes de enviarlo.</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<script>
    function aplicarPlantilla(asunto, mensaje) {
        document.getElementById('asunto').value = asunto;
        document.getElementById('mensaje').value = mensaje;
    }
</script>