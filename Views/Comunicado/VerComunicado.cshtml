@model IngeTechCRM.Models.Comunicado
@{
    ViewData["Title"] = "Ver Comunicado";
}

<div class="container mx-auto px-4 py-6">
    <!-- Breadcrumbs -->
    <nav class="mb-6 flex flex-wrap text-sm">
        <a href="@Url.Action("Index", "Home")" class="text-gray-600 hover:text-blue-600">
            <i class="fas fa-home mr-1"></i>Inicio
        </a>
        <span class="mx-2 text-gray-400">/</span>
        <a href="@Url.Action("MisComunicados", "Comunicado")" class="text-gray-600 hover:text-blue-600">Mis Comunicados</a>
        <span class="mx-2 text-gray-400">/</span>
        <span class="font-medium text-gray-800">Ver Comunicado</span>
    </nav>

    <!-- Encabezado simple -->
    <div class="mb-6 flex items-center justify-between">
        <h1 class="text-2xl font-bold text-gray-800">@Model.TITULO</h1>
        <a href="@Url.Action("MisComunicados")" class="inline-flex items-center text-gray-600 hover:text-blue-600">
            <i class="fas fa-arrow-left mr-2"></i>Volver
        </a>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-4 gap-6">
        <!-- Contenido principal -->
        <div class="lg:col-span-3">
            <!-- Card del comunicado -->
            <div class="bg-white rounded-lg border border-gray-200 shadow-sm">
                <!-- Header -->
                <div class="bg-blue-600 p-4 rounded-t-lg">
                    <div class="flex items-center text-white">
                        <i class="fas fa-envelope mr-3"></i>
                        <div>
                            <h2 class="text-lg font-semibold">@Model.TITULO</h2>
                            <p class="text-blue-100 text-sm">
                                Recibido el @(Model.FECHA_ENVIO_REAL?.ToString("dd/MM/yyyy HH:mm") ?? Model.FECHA_CREACION.ToString("dd/MM/yyyy HH:mm"))
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Contenido -->
                <div class="p-6">
                    <!-- Mensaje -->
                    <div class="mb-6">
                        <div class="prose max-w-none text-gray-700">
                            @Html.Raw(Model.MENSAJE)
                        </div>
                    </div>

                    <!-- Información del remitente -->
                    <div class="border-t border-gray-200 pt-4">
                        <div class="flex items-center justify-between text-sm text-gray-600">
                            <div>
                                <span class="font-medium">De:</span>
                                @(Model.UsuarioCreador?.NOMBRE_COMPLETO ?? "Administrador del Sistema")
                            </div>
                            <div>
                                <span class="font-medium">Fecha:</span>
                                @Model.FECHA_CREACION.ToString("dd/MM/yyyy HH:mm")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Panel lateral -->
        <div class="space-y-4">
            <!-- Acciones rápidas -->
            <div class="bg-white rounded-lg border border-gray-200 shadow-sm">
                <div class="p-4 border-b border-gray-200">
                    <h3 class="font-semibold text-gray-800">Acciones rápidas</h3>
                </div>
                <div class="divide-y divide-gray-100">
                    <a href="@Url.Action("MisComunicados")" class="flex items-center justify-between p-3 hover:bg-gray-50 transition-colors">
                        <div class="flex items-center">
                            <i class="fas fa-envelope text-blue-600 mr-3"></i>
                            <span class="text-sm">Ver todos mis comunicados</span>
                        </div>
                        <i class="fas fa-chevron-right text-gray-400 text-xs"></i>
                    </a>
                    <a href="@Url.Action("Index", "Home")" class="flex items-center justify-between p-3 hover:bg-gray-50 transition-colors">
                        <div class="flex items-center">
                            <i class="fas fa-home text-blue-600 mr-3"></i>
                            <span class="text-sm">Ir al inicio</span>
                        </div>
                        <i class="fas fa-chevron-right text-gray-400 text-xs"></i>
                    </a>
                </div>
            </div>

            <!-- Ayuda -->
            <div class="bg-white rounded-lg border border-gray-200 shadow-sm">
                <div class="p-4 border-b border-gray-200">
                    <h3 class="font-semibold text-gray-800">¿Necesitas ayuda?</h3>
                </div>
                <div class="p-4">
                    <p class="text-sm text-gray-600 mb-3">
                        Si tienes alguna duda sobre este comunicado, puedes contactar con nuestro equipo de soporte.
                    </p>
                    <a href="@Url.Action("Contacto", "Home")"
                       class="inline-flex items-center justify-center w-full bg-blue-600 text-white px-3 py-2 rounded text-sm hover:bg-blue-700 transition-colors">
                        <i class="fas fa-headset mr-2"></i>Contactar Soporte
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>